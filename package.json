{
  "name": "deomi-backend",
  "version": "0.0.1",
  "description": "Deomi project",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc -w",
    "api": "node ./dist/server.js",
    "api-watch": "nodemon ./dist/server.js | pino-pretty -t \"HH:MM:ss.l\"",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Server\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run build-watch\" \"npm run api-watch\""
  },
  "keywords": [
    "nodejs",
    "express"
  ],
  "author": "Amirhossein Yaghoobi <a.yaghoobi.dev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^3.0.2",
    "bluebird": "^3.5.3",
    "chance": "^1.0.18",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "moment-jalaali": "^0.8.3",
    "mongoose": "^5.3.15",
    "pino": "^5.9.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.24",
    "@types/bluebird-global": "^3.5.9",
    "@types/chance": "^1.0.1",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongoose": "^5.3.4",
    "@types/node": "^10.12.12",
    "@types/pino": "^5.8.3",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  }
}
